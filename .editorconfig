# EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.html]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{css,scss}]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.js]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{md,markdown}]
indent_style = space
indent_size = 4
